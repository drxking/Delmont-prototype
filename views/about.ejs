<script>

    let clutter = ""
    let text = document.querySelector(".hero p").textContent.split(" ");
    text.forEach((span) => {
        clutter += `<span> ${span} </span>`
    })
    console.log(clutter)
    document.querySelector(".hero p").innerHTML = clutter
    let tl = gsap.timeline()
    tl.from(".hero h1", {
        rotate: `5deg`,
        y: 120,
        stagger: 0.1,
        // duration:0.4
    })
    tl.from(".hero p span", {
        opacity: 0,
        y: 100,
        stagger: 0.05,
        duration: 0.7,
        delay: -0.7
    })
    tl.from(".hero .buttons button", {
        opacity: 0,
        stagger: 0.1,
        // duration:0.
    })
    gsap.from("section", {
        opacity: 0,
        delay: 0.3
    })


    const swiper = new Swiper('.swiper', {
        direction: 'vertical',
        loop: true,
        autoplay: {
            delay: 2000,
            disableOnInteraction: false,
        },
    });
